<script>
    document.addEventListener("scroll", () => {
        const sections = document.querySelectorAll("section");
        const images = [
            "/Images/bg2.png",
            "/Images/bg20.jpg",
            "/Images/77.jpg",
            "/Images/66.jpg"
        ];
        let scrollPosition = window.scrollY + window.innerHeight / 2;
        let currentImageIndex = 0;

        sections.forEach((section, index) => {
            if (scrollPosition >= section.offsetTop) {
                currentImageIndex = index;
            }
        });

        const wrapper = document.querySelector(".background-wrapper");
        const currentBackground = wrapper.style.backgroundImage;
        const newBackground = `url('${images[currentImageIndex % images.length]}')`;

        if (currentBackground !== newBackground) {
            wrapper.style.backgroundImage = newBackground;
        }
    });

</script>
